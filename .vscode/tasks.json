{
    "version": "2.0.0",
	"tasks": 
	[
        {
            "type": "shell",
            "label": "build-cc",
            "command": "g++",
            "args": [
                "-std=c++17",
                "src/*.cc",
                "-o",
                "bin/helloworld.exe"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
    	 }
    ]
}